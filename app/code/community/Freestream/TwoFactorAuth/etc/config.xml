<config>
    <modules>
        <Freestream_TwoFactorAuth>
            <version>1.0.0</version>
        </Freestream_TwoFactorAuth>
    </modules>
    <global>
        <helpers>
            <fstwofa>
                <class>Freestream_TwoFactorAuth_Helper</class>
            </fstwofa>
        </helpers>
        <models>
            <fstwofa>
                <class>Freestream_TwoFactorAuth_Model</class>
                <resourceModel>fstwofa_resource</resourceModel>
            </fstwofa>
            <fstwofa_resource>
                <class>Freestream_TwoFactorAuth_Model_Resource</class>
                <entities>
                    <admin_hash>
                        <table>fs_admin_twofactorauth_hash</table>
                    </admin_hash>
                </entities>
            </fstwofa_resource>
        </models>
        <blocks>
            <fstwofa>
                <class>Freestream_TwoFactorAuth_Block</class>
            </fstwofa>
        </blocks>
        <resources>
            <fstwofa_setup>
                <setup>
                    <module>Freestream_TwoFactorAuth</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </fstwofa_setup>
        </resources>
        <events>
            <admin_user_authenticate_before>
                <observers>
                    <fstwofa>
                        <class>fstwofa/admin_observer</class>
                        <method>authenticateOtp</method>
                    </fstwofa>
                </observers>
            </admin_user_authenticate_before>
            <admin_user_save_after>
                <observers>
                    <fstwofa_assign_secret>
                        <class>fstwofa/admin_observer</class>
                        <method>assignSecretToAdmin</method>
                    </fstwofa_assign_secret>
                    <fstwofa_save>
                        <class>fstwofa/admin_observer</class>
                        <method>saveAdminSecret</method>
                    </fstwofa_save>
                </observers>
            </admin_user_save_after>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <fstwofa>
                    <file>freestream/twofactorauth.xml</file>
                </fstwofa>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Freestream_TwoFactorAuth before="Mage_Adminhtml">Freestream_TwoFactorAuth_Adminhtml</Freestream_TwoFactorAuth>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>

